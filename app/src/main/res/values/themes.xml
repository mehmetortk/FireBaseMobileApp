<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FireBaseMobileApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/white</item>
    </style>
    <style name="CustomEditTextStyle">
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>
    <style name="CustomTextViewStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomSpinnerStyle">
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="BottomNavigationView.ActiveText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BottomNavigationView.InactiveText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.FireBaseMobileApp" parent="Base.Theme.FireBaseMobileApp" />
</resources>